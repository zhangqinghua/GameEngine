#version 400 core
/*输入*/
in vec3 position;
in vec3 normal;
in vec2 texCoords;
/*输出*/
out vec3 Normal;
out vec3 FragPos;
out vec2 TexCoords;
/*外部变量*/
uniform mat4 model;
uniform mat4 projection;
uniform mat4 view;

void main (void) {
	gl_Position = projection * view * model * vec4(position, 1.0f);
	FragPos = vec3(model * vec4(position, 1.0f));
    Normal = mat3(transpose(inverse(model))) * normal;  
    TexCoords = texCoords;
}
